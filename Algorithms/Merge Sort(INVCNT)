    #endif
}

int mergeit(int l, int m, int h, int* a, int n){
    int inv_cnt=0;
    int sz = h-l+1;
    int temp[sz];
    int first = l;
    int second = m;
    int start = l;
    while(first<m && second<=h){
        if(a[first] <= a[second]){
            temp[start++] = a[first++];
        }
        else{
            temp[start++] = a[second++];
            inv_cnt += m-first;
        }
    }
    while(first<m){
        temp[start++] = a[first++];
    }
    while(second<=h){
        temp[start++] = a[second++];
    }
    for(int i=l; i<=h; ++i)
        a[i] = temp[i];
    return inv_cnt;
}

int mergesort(int l, int h, int* a, int n){
    int inv_cnt=0;
    if(l<h){
        int m = l + (h-l)/2;
        inv_cnt += mergesort(l,m,a,n);
        inv_cnt += mergesort(m+1,h,a,n);
        inv_cnt += mergeit(l,m+1,h,a,n);
    }
    return inv_cnt;
}

int32_t main()
{
    fast;
    rf();
    int n;
    cin>>n;
    int a[n];
    forn(i,n)cin>>a[i];
    cout<<mergesort(0,n-1,a,n)<<nl;
}
